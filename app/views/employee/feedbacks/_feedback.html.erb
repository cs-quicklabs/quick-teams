<tr id="<%= dom_id feedback %>">
  <td class="table-cell ">
    <div class="text-sm">
      <%= link_to highlight_hashtag(feedback.title.upcase_first), employee_feedback_path(@employee, feedback), class: "line-clamp-2 font-medium text-gray-900 block hover:underline" %>
    </div>
  </td>
  <td class="table-cell whitespace-nowrap">
    <%= feedback.published %>
  </td>
  <td class="table-cell whitespace-nowrap">
    <a href="<%= employee_team_path(feedback.user) %>" class="block hover:underline" target="_top">
      <%= feedback.user.decorate.display_name %>
    </a>
  </td>
  <td class="table-cell whitespace-nowrap">
    <%= display_created_at(feedback) %>
  </td>
  <td class="table-cell ">
    <div class="flex justify-end space-x-2">
      <% if policy([@employee, feedback]).edit? %>
        <%= edit_button(edit_employee_feedback_path(@employee, feedback)) %>
      <% end %>
      <% if policy([@employee, feedback]).destroy? %>
        <%= delete_button(employee_feedback_path(@employee, feedback)) %>
      <% end %>
    </div>
  </td>
</tr>
