<main class="relative z-0 flex-1 overflow-y-auto focus:outline-none">
  <%= render partial: "employee/title", locals: {employee: @employee}%>
  <main class="pb-8">
    <div class="">
      <h1 class="sr-only">Page title</h1>
      <!-- Main 3 column grid -->
      <div class="grid items-start grid-cols-1  lg:grid-cols-3 ">
        <!-- Left column -->
        <div class="grid grid-cols-1 gap-4 lg:col-span-2">
          <section aria-labelledby="participants_section">
            <div class="overflow-hidden bg-white">
              <div class="w-full overflow-hidden" data-controller="infinite-scroll">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th scope="col" class="pr-20 pl-10   py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">
                        Filename
                      </th>
                      <th scope="col" class="w-full px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">
                        Comments
                      </th>
                      <th scope="col" class="px-10 py-3 text-xs font-medium tracking-wider text-right text-gray-500 uppercase whitespace-nowrap">
                        Added by
                      </th>
                      <th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase whitespace-nowrap">
                        Created at
                      </th>
                      <th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-right text-gray-500 uppercase">
                        Action
                      </th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200" id="documents" data-infinite-scroll-target="entries">
                    <%= render partial: "document", collection: @documents, as: :document, cached: true%>
                  </tbody>
                </table>
                <div class="flex justify-end invisible mt-2 mb-6 mr-2" data-infinite-scroll-target="pagination">
                  <%== render partial: "shared/paginator", locals:{pagy: @pagy}%>
                </div>
              </div>
            </div>
          </section>
        </div>
        <% if policy([@employee, Document]).create? %>
          <!-- Right column -->
          <div class="grid grid-cols-1 gap-4 xl:border-l xl:border-gray-200">
            <section aria-labelledby="add-participant-section">
              <h2 class="sr-only" id="section-2-title">Add New document</h2>
              <div class="overflow-hidden bg-white">
                <div class="px-4">
                  <%= render partial: "form", locals: { document: @document} %>
                </div>
              </div>
            </section>
          </div>
        <% end %>
      </div>
    </div>
  </main>
  <div class="pt-4 pl-16 pr-16">
  </div>
</main>
