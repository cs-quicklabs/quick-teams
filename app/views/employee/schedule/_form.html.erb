<%= form_with(model: schedule, id: dom_id(schedule), url: employee_schedule_path(@employee)) do |form| %>
  <main class="max-w-lg px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16">
    <%= render "shared/form_messages", resource: schedule, message: local_assigns[:message] %>
    <%= render "shared/form_header", title: "Add New Participant Project", subtitle: "Add new Employee project and fill in engagement level." %>
    <%= form.collection_select(:project_id, ProjectDecorator.decorate_collection(@employee.potential_project), :id, :display_discipline, {:prompt => 'Select Participant'}, :selected => schedule.project_id, :class=>"form-text-field mt-4" )%>
    <div>
      <label for="starts" class="block text-sm font-medium text-gray-700">
        Starts At
      </label>
      <%= form.date_field :starts_at, class: 'form-text-field mt-1' %>
    </div>
    <div>
      <label for="ends" class="block text-sm font-medium text-gray-700">
        Ends At
      </label>
      <%= form.date_field :ends_at, class: 'form-text-field mt-1' %>
    </div>
    <div>
      <label for="occupancy" class="block text-sm font-medium text-gray-700">
        Occupancy (%)
      </label>
      <%= form.text_field :occupancy, class: 'form-text-field mt-1', placeholder: "1 to 100 percent", autocomplete: "off"%>
    </div>
    <div class="flex justify-end mt-6">
      <%= form.submit "Add Participant Project", class:"btn-blue"%>
    </div>
  </main>
<% end %>
