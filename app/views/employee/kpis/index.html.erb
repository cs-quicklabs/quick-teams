<main class="relative z-0 flex-1 overflow-y-auto focus:outline-none">
  <%= render "employee/title", employee: @employee%>
  <main class="pb-8">
    <div class="">
      <!-- Main 3 column grid -->
      <div class="grid items-start grid-cols-1 lg:grid-cols-3">
        <!-- Left column -->
        <div class="grid grid-cols-1 gap-4 lg:col-span-2">
          <section aria-labelledby="participants_section">
            <div class="overflow-hidden bg-white" data-controller="infinite-scroll">
              <div>
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">
                        Survey
                      </th>
                      <th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">
                        Taken By
                      </th>
                      <th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">
                        Date
                      </th>
                      <th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-right text-gray-500 uppercase">
                        Action
                      </th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200" id="todos" data-infinite-scroll-target="entries">
                  </tbody>
                </table>
                <div class="flex justify-end mt-2 mb-6 mr-2 invisible" data-infinite-scroll-target="pagination">
                </div>
              </div>
            </div>
          </section>
        </div>
        <!-- Right column -->
        <div class="grid grid-cols-1 gap-4 xl:border-l xl:border-gray-200">
          <section aria-labelledby="add-participant-section">
            <div class="overflow-hidden bg-white">
              <div class="px-4">
                <div class="p-5 border-b border-gray-200">
                  <h3 class="text-lg leading-6 font-medium text-gray-900">
                    KPIs
                  </h3>
                  <p class="mt-2 max-w-4xl text-sm text-gray-500">Squad Leader KPIs </p>
                </div>
                <ul class="divide-y divide-gray-200">
                  <%= render partial: "survey", collection: @surveys, as: :survey, cached: true %>
                </ul>
              </div>
              <div class="relative p-5 px-8">
                <div class="flex items-center justify-between">
                  <div>
                    <span class="text-xs font-medium inline-block py-1 uppercase">
                      Trust & Teamwork
                    </span>
                  </div>
                  <div class="text-right">
                    <span class="text-xs font-semibold inline-block">
                      7
                    </span>
                  </div>
                </div>
                <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-200">
                  <div style="width:30%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-purple-500">
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </main>
  <div class="pt-4 pl-16 pr-16">
  </div>
</main>
