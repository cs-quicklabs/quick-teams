<li id="<%= dom_id skill %>" class="relative" >
  <div class="group block w-full aspect-w-7 aspect-h-7 rounded-lg  ">
    <label class="block text-sm font-medium pb-1 text-gray-700 min-w-sm" >
      <%= check_box_tag skill.id, skill.id, selected, :name => "ids[]", data: { reflex: "click->EmployeeSkills#select", skill_id: skill.id, employee_id: employee.id}, class: "mr-2 w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 cursor-pointer" %>
      <%= skill.name.titleize %>
    </label>
  </div>
</li>
