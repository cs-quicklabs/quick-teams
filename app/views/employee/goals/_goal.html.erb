<tr id="<%= dom_id goal %>">
  <td class="table-cell ">
    <div class="text-sm">
      <%= link_to highlight_hashtag(goal.title.upcase_first), employee_goal_path(@employee, goal), class: "line-clamp-2 font-medium text-gray-900 block hover:underline" %>
    </div>
  </td>
  <td class="text-sm text-center">
    <div class="mt-1 text-sm text-gray-700">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium <%= goal_status_color(goal) %>">
        <%= goal.status.to_s.titleize %>
      </span>
    </div>
  </td>
  <td class="table-cell whitespace-nowrap">
    <a href="<%= employee_team_path(goal.user) %>" class="block hover:underline" target="_top">
      <%= goal.user.decorate.display_name %>
    </a>
  </td>
  <td class="table-cell whitespace-nowrap">
    <%= display_created_at(goal) %>
  </td>
  <td class="table-cell ">
    <div class="flex justify-end space-x-2">
      <% if policy([@employee, goal]).edit? %>
        <%= edit_button(edit_employee_goal_path(@employee, goal)) %>
        <%= delete_button(employee_goal_path(@employee, goal)) %>
      <% end %>
    </div>
  </td>
</tr>
