<tr id="<%= dom_id(nugget) %>">
  <%nugget = nugget.decorate %>
  <td class="w-full px-16 py-4 overflow-auto text-sm text-gray-700">
   <a href="<%= employee_nugget_path(@employee, nugget)%>", class="truncate hover:text-gray-600 hover:underline">
    <span class="text-gray-900 block whitespace-normal "><%=  nugget.display_title %></span>
    </a>   
  </td>
  <td class="px-12 py-3  text-sm text-gray-700 max-w-0  ">
    <span class="text-gray-900 text-left  whitespace-nowrap ">  <%= display_created_at(nugget) %> </span>
  </td>
   <td class="px-16 py-4  text-sm text-gray-700 max-w-0 align-top ">
    <a href="#" class="block hover:underline whitespace-nowrap" target="_top">
      <%= nugget.user.display_name %>
    </a>
  </td>
   <td class="px-12 py-4 text-sm text-gray-700 whitespace-nowrap align-top">
    <span class="inline-flex px-2 text-xs font-semibold text-left leading-5 text-gray-800 bg-gray-100 rounded-full">
    <%= nugget.skill.name %>
    </span>
  </td>
  <td class="px-12 py-4 text-sm text-gray-700 whitespace-nowrap align-top">
   <% if nugget.read? %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          <%= "read" %>
          <% else %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
            <%= "Unread" %>
            <% end %>
  </td>
</tr>