<%= tailwind_form_with(model: @todo, id: dom_id(@todo), url: employee_todo_path(@employee, @todo), method: :patch) do |form| %>
  <main class="max-w-lg px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16">
    <%= render "shared/form_messages", resource: @todo, message: local_assigns[:message] %>
    <%= render "shared/form_header", title: "Edit todo for #{@employee.decorate.display_name}", subtitle: "Todo are short term goals" %>
    <%= form.text_area :title, "Title", autocomplete: "off" %>
    <%= form.text_area :body, "Description(optional)" %>
    <div>
      <label for="date" class="block text-sm font-medium text-gray-700">
        Due Date
      </label>
      <%= form.date_field :deadline, class: "form-text-field mt-1", value: Date.today.to_s(:db) %>
    </div>
    <div class="flex justify-end">
      <%= link_to "Back", "javascript:history.back()", class: "btn-normal" %>
      <%= form.submit "Edit Todo", class: "btn-blue" %>
    </div>
  </main>
<% end %>
