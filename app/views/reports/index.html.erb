<div class="max-w-2xl mx-auto mt-8 mb-8">
  <h3 class="px-3 text-xs font-semibold tracking-wider text-gray-500 uppercase" id="projects-headline">
    Timesheets
  </h3>
  <div class="mt-1 space-y-1" aria-labelledby="projects-headline">
    <a href="<%= timesheets_reports_path(from_date: Date.today - 7.days, to_date: Date.today) %>" class="flex items-center px-3 py-2 text-sm font-medium text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Last Week's Timesheet Report
      </span>
    </a>
    <a href="<%= timesheets_reports_path(from_date: Date.today - 30.days, to_date: Date.today) %>" class="flex items-center px-3 py-2 text-sm font-medium text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Last Month's Timesheet Report
      </span>
    </a>
  </div>
  <h3 class="px-3 mt-8 text-xs font-semibold tracking-wider text-gray-500 uppercase" id="projects-headline">
    Goals
  </h3>
  <div class="mt-1 space-y-1" aria-labelledby="projects-headline">
    <a href="<%= goals_reports_path(from_date: Date.today - 7.days, to_date: Date.today) %>" class="flex items-center px-3 py-2 text-sm font-medium text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Last Week's Goals Status Report
      </span>
    </a>
    <a href="<%= goals_reports_path(from_date: Date.today - 30.days, to_date: Date.today) %>" class="flex items-center px-3 py-2 text-sm font-medium text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Last Month's Goals Status Report
      </span>
    </a>
    <a href="<%= goals_reports_path(from_date: Date.today - 90.days, to_date: Date.today) %>" class="flex items-center px-3 py-2 text-sm font-medium text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Last Quarter's Goals Status Report
      </span>
    </a>
    <a href="<%= goals_reports_path(status: 0, to_date: Date.today) %>" class="flex items-center px-3 py-2 text-sm font-medium text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Pending goals which should have been completed by now
      </span>
    </a>
  </div>
</div>
