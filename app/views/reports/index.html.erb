<div class="max-w-2xl mx-auto mt-8 mb-8">
  <h3 class="px-3 text-xs font-bold tracking-wider text-gray-800 uppercase" id="projects-headline">
    Timesheets
  </h3>
  <div class="mt-1 space-y-1" aria-labelledby="projects-headline">
    <a href="<%= timesheets_reports_path %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Timesheets Report
      </span>
    </a>
    <a href="<%= timesheets_reports_path(from_date: Date.yesterday, to_date: Date.today) %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        What happened yesterday?
      </span>
    </a>
  </div>
  <h3 class="px-3 mt-8 text-xs font-bold tracking-wider text-gray-800 uppercase" id="projects-headline">
    Goals
  </h3>
  <div class="mt-1 space-y-1" aria-labelledby="projects-headline">
    <a href="<%= goals_reports_path(from_date: Date.today - 7.days, to_date: Date.today) %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Last Week's Goals Status Report
      </span>
    </a>
    <a href="<%= goals_reports_path(from_date: Date.today - 30.days, to_date: Date.today) %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Last Month's Goals Status Report
      </span>
    </a>
    <a href="<%= goals_reports_path(from_date: Date.today - 90.days, to_date: Date.today) %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Last Quarter's Goals Status Report
      </span>
    </a>
    <a href="<%= goals_reports_path(status: 0, to_date: Date.today) %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Pending goals which should have been completed by now
      </span>
    </a>
    <a href="<%= goals_reports_path(status: 0, to_date: Date.today, created_by: current_user.id) %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Pending goals created by me
      </span>
    </a>
    <a href="<%= goals_reports_path(status: 1, from_date: Date.today - 30.days, to_date: Date.today) %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Recently completed goals
      </span>
    </a>
  </div>
  <h3 class="px-3 mt-8 text-xs font-bold tracking-wider text-gray-800 uppercase" id="projects-headline">
    Schedules
  </h3>
  <div class="mt-1 space-y-1" aria-labelledby="projects-headline">
    <a href="<%= available_schedules_reports_path %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Available Resources
      </span>
    </a>
    <a href="<%= overburdened_schedules_reports_path %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Overburdened Resources 
      </span>
    </a>
    <a href="<%= shared_schedules_reports_path %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Resources shared in multiple projects
      </span>
    </a>
  </div>
  <h3 class="px-3 mt-8 text-xs font-bold tracking-wider text-gray-800 uppercase" id="projects-headline">
    Employees
  </h3>
  <div class="mt-1 space-y-1" aria-labelledby="projects-headline">
    <a href="<%= employees_reports_path %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Employees Report
      </span>
    </a>
  </div>
  <h3 class="px-3 mt-8 text-xs font-bold tracking-wider text-gray-800 uppercase" id="projects-headline">
    Projects
  </h3>
  <div class="mt-1 space-y-1" aria-labelledby="projects-headline">
    <a href="<%= projects_reports_path %>" class="flex items-center px-3 py-1 text-sm text-gray-600 rounded-md group hover:text-gray-900 hover:bg-gray-50">
      <span class="truncate">
        Projects Report
      </span>
    </a>
  </div>
</div>
</div>
