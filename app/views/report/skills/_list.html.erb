
 <% skill_report = skill_report.decorate %>
<tr id="<%= dom_id(skill_report)%>">
  <tr>
  <td class="w-2/3 px-6 py-4 overflow-hidden text-sm text-gray-700 max-w-0">
   <div class="flex items-center">
      <div class="flex-shrink-0 w-10 h-10">
        <%= image_tag "male-placeholder-image.png", class:"w-10 h-10 rounded-full"%>
      </div>
      <div class="ml-4">
    <a href="<%= employee_schedules_path(skill_report) %>" class="truncate hover:text-gray-600 hover:underline">
       <div class="text-sm font-medium text-gray-900">
          <%= skill_report.display_name.titleize %>
            <% unless skill_report.status.nil? %>
              <span class="inline-flex px-2 text-xs font-semibold leading-5 text-black-800 bg-white-100 rounded-full">
                <%= skill_report.status.name.titleize %>
              </span>
            <% end %>
          </div>
          <div class="text-sm text-gray-500">
            <%= skill_report.role.name%>
          </div>
    </a>
    </div>
  </td>
    <td class="w-1/3 px-2 py-4 text-sm text-left  text-gray-900 whitespace-nowrap">
        <% skill_report.skills.each do |skill| %>
          <span class="mr-1 inline-flex rounded text-left  py-0.5 pl-2.5 pr-1 text-sm font-medium bg-gray-100 text-gray-700">
            <%= skill.name %>
          </span>  
        <% end %>
    </td>
  </tr>



