 <main class="relative z-0 flex-1 overflow-x-scroll focus:outline-none h-full">
  <div class="px-4 py-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8">
    <div class="flex flex-wrap items-baseline -mt-2 -ml-2">
      <h1 class="text-3xl font-bold leading-tight text-gray-900">
        Spaces
      </h1>
      <p class="mt-1 ml-1 text-sm text-gray-500 truncate"><%= "(" + (@spaces.count + @shared_spaces.count).to_s + " spaces)" %></p>
    </div>
    <div class="flex mt-4 sm:mt-0 sm:ml-4">
      <%= link_to "Add New Space", new_space_path, class: "btn-blue  " %>
    </div>
  </div>
  <div class="relative py-6 px-6 grid  gap-16" id="release_notes">
    <% if @pin_spaces.size > 0 %>
      <div>
        <h1 class="text-lg font-medium leading-6 text-gray-900 pb-6">Pinned spaces</h1>
        <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
          <%= render partial: "space", collection: @pin_spaces, as: :space, cached: false %>
        </ul>
      </div>
    <% end %>
    <% if @spaces.size > 0 %>
      <div id="created-spaces">
        <h1 class="text-lg font-medium leading-6 text-gray-900 pb-6">Created by you</h1>
        <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
          <%= render partial: "space", collection: @spaces, as: :space, cached: false %>
        </ul>
      </div>
    <% end %>
    <% if @shared_spaces.size > 0 %>
      <div id="shared-spaces">
        <h1 class="text-lg font-medium leading-6 text-gray-900 pb-6">Shared with you  </h1>
        <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
          <%= render partial: "space", collection: @shared_spaces, as: :space, cached: false %>
        </ul>
      </div>
    <% end %>
    <% if @archive_spaces.size > 0 %>
      <div id="archived-spaces">
        <h1 class="text-lg font-medium pb-6 ">Archived spaces</h1>
        <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
          <%= render partial: "space", collection: @archive_spaces, as: :space, cached: false %>
        </ul>
      </div>
    <% end %>
  </div>
</main>
