<%= turbo_frame_tag dom_id(comment) do %>
  <li class="mt-6">
    <div class="flex w-full space-x-3">
      <div class="flex-shrink-0">
        <%= image_tag "male-placeholder-image.png", class: "w-8 h-8 rounded-full" %>
      </div>
      <div class="w-full">
        <div class="w-full text-sm">
          <a href="#" class="font-medium text-gray-900"><%= comment.user.decorate.display_name %> </a>
        </div>
        <div class="text-sm text-gray-700">
          <p class="whitespace-pre-wrap"><%=comment.body%></p>
        </div>
        <div class="space-x-2 flex">
          <span class="text-gray-500 text-sm"><%= display_created_at(comment) %></span>
          <% if policy(comment).edit? %>
            <div class="flex justify-end items-center space-x-2">
              <%= edit_button(edit_comment_path(comment)) %>
              <%= delete_button(comment_path(comment)) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </li>
<% end %>
