<div class="flex-1 min-w-0" id="title">
  <h3 class="text-2xl font-bold leading-tight text-gray-900">
    <%= template.title.upcase_first %>
  </h3>
  <div class="flex mt-4 space-x-2">
    <div class="flex-shrink-0">
      <%= image_tag "male-placeholder-image.png", class: "w-10 h-10 rounded-full " %>
    </div>
    <div>
      <div class="mt-3 space-x-2 text-sm">
        <span class="font-medium text-gray-500">Created By <%= template.user.decorate.display_name %> on <%= display_created_at(template) %> </span>
      </div>
    </div>
  </div>
</div>
