<main class="relative z-0 flex-1 overflow-y-auto focus:outline-none">
  <!-- Page title & actions -->
  <div class="px-8 py-8 border-b border-gray-200 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8">
    <div class=" items-baseline px-12">
      <h1 class="text-lg leading-tight text-gray-900">
        <%= @attempt.participant.name.titleize %></h1>
      <h4 class="text-md  leading-tight text-gray-900"><%= @attempt.participant.email %></h4>
      <h4 class="text-md leading-tight text-gray-900"><%= @attempt.survey.name.titleize %></h4>
    </div>
    <div class=" px-52">
      <h4 class="text-lg leading-tight text-gray-900 mr-10">
        <%score = @attempt.correct_answers.reduce(0.0) { |sum, answer| sum + answer.score}%>
        <%total = (@attempt.answers.count * 10) %>
        <%percentage = (score/total) * 100.0 %></h4>
      <h1 class="text-lg leading-tight text-gray-900" >Score: <%=  percentage.round(2) %>%</h1>
    </div>
  </div>
  <div class=" w-full ">
    <div class="pb-8">
      <table class="min-w-full divide-y divide-gray-200 pb-8">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-20 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              #         </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Question</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Score</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Verdict</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @attempt.survey.questions.each_with_index do |question, index| %>
            <tr class="bg-white ">
              <td class="py-3  px-20 text-sm font-medium text-gray-900">
                <%= index + 1  %></td>
              <td class="py-3 px-6  text-sm font-medium text-gray-900"><%= question.text %></td>
              <td class="py-3 px-6 text-sm font-medium text-gray-900"><%= question.marked_score(@attempt).to_s %></td>
              <td class="py-3  px-6 text-sm font-medium text-gray-900">
                <% if question.marked_score(@attempt) == 0 %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="orange" class="bi bi-exclamation-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                  </svg>
                <% elsif question.marked_score(@attempt) >= 7 %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="green" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                  </svg>
                <% elsif question.marked_score(@attempt) >= 4 && question.marked_score(@attempt) <= 6 %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="pink" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                  </svg>
                <% else %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="red" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                  </svg>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= render partial: 'download_pdf', locals: {  attempt: @attempt }%>
  </div>
</main>
