<div class="overflow-y-auto w-full">
  <%if !@attempt.submitted?%>
  <%= form_with(url: survey_attempt_submit_path(@survey, @attempt), model: @attempt) do |form| %>
    <div class="pt-6 px-32">
      <label for="comment" class="block text-sm  py-4 font-medium text-gray-700">
        Comments (optional)
      </label>
      <textarea  id="comment" name="comment"  rows="4" autocomplete="off" class=" shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-11/12 sm:text-sm border-gray-300 rounded-md"></textarea>
    </div>
    <div class=" sm:col-span-4 px-6 flex justify-end mr-48 overflow-y-auto py-6">
      <%= link_to 'Back','javascript:history.back()', class:"btn-normal" %>
        <%= link_to "Submit", survey_attempt_submit_path(@survey, @attempt),  class:"ml-4 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <button type="submit" class="btn-blue">
        Submit and Download PDF
      </button>
    </div>
      <% end %>
    <% else %>
    <div class="overflow-y-auto w-full d-flex mt-7">
      <span class="align-text-bottom mt-20 ">
        <h4 class="align-text-bottom ml-16 font-weight-normal">Comment: </h4>
        <h4 class="mt-20 align-text-bottom font-weight-normal"><% @attempt.comment %></h4>
      </span>
    </div>
     <div class=" sm:col-span-4 px-6 flex justify-end mr-48 overflow-y-auto py-6">
     <%= link_to 'Back',survey_attempts_path(@survey), class:"btn-normal" %>
       <%= link_to 'download',survey_attempt_pdf_path(@survey, @attempt), class:"btn-blue" %>
       </div>
  <% end %>
</div>
