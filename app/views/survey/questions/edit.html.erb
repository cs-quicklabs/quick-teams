<div class="min-h-full flex  justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Edit Question
      </h3>
    </div>
    <%= form_with(model: @question, id: dom_id(@question), url: survey_question_path(@survey, @question), method: :patch) do |form| %>
      <div class="mt-8 space-y-6">
        <input type="hidden" name="remember" value="true">
        <div class=" -space-y-px">
          <div>
            <label for="first-name" class="block text-sm font-medium text-gray-700">
              Question
            </label>
            <%= form.text_area :text, required: true, class: "mt-1 h-20 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <div class="sm:col-span-4 pt-6">
            <label for="first-name" class="block text-sm font-medium text-gray-700">
              Question Description
            </label>
            <%= form.text_area :description, required: true, class: "mt-1 h-24 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>
        <div class="pt-5">
          <div class="flex justify-end">
            <%= link_to 'Back','javascript:history.back()', class:"bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-g-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 no-underline" %>
            <button type="submit" class="ml-3  inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Edit Question
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
