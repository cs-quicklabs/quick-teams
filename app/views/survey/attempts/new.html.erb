<div class="min-h-full flex  justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Enter Participant Details
      </h3>
      <p class="mt-1 text-sm text-gray-500">
        <%= @survey.name %>
      </p>
    </div>
    <%= form_with(url: survey_new_attempt_path(@survey.id)) do |form| %>
      <div class="mt-8 space-y-6">
        <input type="hidden" name="remember" value="true">
        <div class=" -space-y-px">
          <div>
            <label for="first-name" class="block text-sm font-medium text-gray-700">
              Full Name
            </label>
            <input required=true type="text" name="name" id="name" autocomplete="off" class="mt-1 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
          </div>
          <div class="sm:col-span-4 pt-6">
            <label for="email" class="block text-sm font-medium text-gray-700">
              Email address
            </label>
            <input required=true id="email" name="email" type="email" autocomplete="off" class="mt-1 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
          </div>
        </div>
        <div class="pt-5">
          <div class="flex justify-end">
            <%= link_to 'Back','javascript:history.back()', class:"bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-g-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 no-underline" %>
            <button type="submit" class="ml-3  inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Start
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
