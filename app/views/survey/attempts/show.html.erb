<!-- This example requires Tailwind CSS v2.0+ -->
<% survey = @attempt.survey %>
<div class="min-h-full flex justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full space-y-8 ">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900 text-center">
        <%= @attempt.participant.name %>
      </h3>
      <p class="mt-1 w-full text-sm text-gray-500 text-center">
        <%= survey.name %>
      </p>
    </div>
    <div class="">
      <fieldset class="space-y-5">
        <% survey.questions.each do |question| %>
          <% if survey.survey_type == 0 %>
            <%= render partial: 'checklist_question', locals: { question: question, attempt: @attempt } %>
          <% else %>
            <%= render partial: 'score_question', locals: { question: question, attempt: @attempt } %>
          <% end %>
        <% end %>
      </fieldset>
      <div class=" flex justify-end py-12">
        <%= link_to "Submit", submit_attempt_path,  class:"bg-blue-600 py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 no-underline" %>
      </div>
    </div>
  </div>
</div>
