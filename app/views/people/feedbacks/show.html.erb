<!-- This example requires Tailwind CSS v2.0+ -->
<main class="max-w-2xl px-4 pt-10 pb-12 mx-auto space-y-6 lg:pb-16">
  <div class="px-4 py-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8">
    <div class="flex-1 min-w-0">
      <h3 class="text-2xl font-bold leading-tight text-gray-900">
        <%= @feedback.title.titleize %>
      </h3>
      <div class="flex mt-4 space-x-3">
        <div class="flex-shrink-0">
          <img class="w-10 h-10 rounded-full" src="https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?ixlib=rb-1.2.1&ixqx=T6AY8bD1bU&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
        </div>
        <div>
          <div class="text-sm">
            <a href="#" class="font-medium text-gray-900"><%= @feedback.author.display_name%></a>
          </div>
          <div class="mt-1 space-x-2 text-sm">
            <span class="font-medium text-gray-500"><%=time_ago_in_words(@feedback.created_at) + ' ago'%></span>
          </div>
        </div>
      </div>
    </div>
    <div class="flex mt-4 sm:mt-0 sm:ml-4">
      <%= link_to 'Back', person_feedbacks_path(@employee), class:"btn-back" %>
    </div>
  </div>
  <div class="mt-1 text-sm text-gray-700 sm:px-6 lg:px-8">
    <p><%= @feedback.body%></p>
  </div>
</main>
