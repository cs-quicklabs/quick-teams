<main class="relative z-0 flex-1 overflow-y-auto focus:outline-none">
  <div class="px-4 py-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8">
    <div class="flex flex-wrap items-baseline -mt-2 -ml-2">
      <h1 class="text-3xl font-bold leading-tight text-gray-900">
        <%= @employee.display_name %>
      </h1>
      <p class="mt-1 ml-2 text-sm text-gray-500 truncate"><%= @employee.display_position%></p>
    </div>
    <div class="flex mt-4 sm:mt-0 sm:ml-4">
      <%= link_to 'Edit', edit_person_path(@employee), class:"inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
  <%= render 'people/tabs'%>
  <div class="px-4 sm:px-6">
    <h2 class="sr-only" id="section-1-title">Project Participants</h2>
    <div class="overflow-hidden bg-white">
      <div class="p-4">
        <div class="flex flex-wrap">
          <p class="pb-2 mt-1 text-sm font-medium text-gray-900 truncate"><%="Team Members(" + @subordinates.size.to_s + ")"%></p>
        </div>
        <ul class="divide-y divide-gray-200">
          <%= render partial: "people/team/employee", collection: @subordinates, as: :employee%>
        </ul>
      </div>
    </div>
  </div>
</div>
</main>
