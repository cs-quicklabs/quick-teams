<%= turbo_frame_tag dom_id(project_tag) do %>
  <li class="py-4 flex border-b border-gray-200">
    <div class="ml-3 flex w-full">
      <p class="w-full text-sm font-medium text-gray-900"><%= project_tag.name.titleize %></p>
      <div class="flex">
        <%= link_to "Edit", edit_project_tag_path(project_tag), class: "text-sm text-gray-400 hover:text-indigo-600" %>
        <%= link_to "Delete", project_tag_path(project_tag), method: :delete, class: "text-sm pl-2 text-gray-400 hover:text-red-600" %>
      </div>
    </div>
  </li>
<% end %>
