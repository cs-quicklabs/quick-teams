<%= turbo_frame_tag dom_id(@client) do %>
  <%= form_with(model: @client, id: dom_id(@client), url: account_client_path(@client)) do |form| %>
    <li class="flex py-4 border-b border-gray-200">
      <div class="flex w-full">
        <%= form.text_field :name, class: "w-full block w-full shadow-sm focus:ring-light-blue-500 focus:border-light-blue-500 sm:text-sm border-gray-300 rounded-md"%>
        <%= form.text_field :email, class: "ml-3 w-full block w-full shadow-sm focus:ring-light-blue-500 focus:border-light-blue-500 sm:text-sm border-gray-300 rounded-md"%>
        <%= form.submit "Save", class:"btn-blue ml-3 justify-end"%>
      </div>
    </li>
  <% end %>
<% end %>
