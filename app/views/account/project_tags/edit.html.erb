<%= turbo_frame_tag dom_id(@project_tag) do %>
  <%= form_with(model: @project_tag, id: dom_id(@project_tag), url: account_project_tag_path(@project_tag)) do |form| %>
    <% if local_assigns[:messages] && defined?(messages) && !messages.nil?%>
      <% messages.each do |message| %>
        <p class="mt-2 text-sm text-red-600"><%= message %></p>
      <% end %>
    <% end %>
    <li class="flex w-full py-4 border-b border-gray-200">
      <div class="w-full">
        <%= form.text_field :name, class: "form-text-field", autocomplete: "off"%>
      </div>
      <div class="flex">
        <%= form.submit "Save", class:"btn-blue ml-3 cursor-pointer"%>
      </div>
      <div>
      </div>
    </li>
  <% end %>
<% end %>
