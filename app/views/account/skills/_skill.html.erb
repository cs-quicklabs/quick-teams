<%= turbo_frame_tag dom_id(skill) do %>
  <li class="py-4 flex border-b border-gray-200">
    <div class="ml-3 flex w-full">
      <p class="w-full text-sm font-medium text-gray-900"><%= skill.name.titleize %></p>
      <div class="flex">
        <%= link_to "Edit", edit_skill_path(skill), class: "btn-inline-edit" %>
        <%= link_to "Delete", skill_path(skill), method: :delete, class: "btn-inline-delete pl-2" %>
      </div>
    </div>
  </li>
<% end %>
