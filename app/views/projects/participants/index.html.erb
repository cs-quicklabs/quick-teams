<main class="flex-1 relative z-0 overflow-y-auto focus:outline-none">
  <div class="px-4 py-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8">
    <div class="-ml-2 -mt-2 flex flex-wrap items-baseline">
      <h1 class="text-3xl font-bold leading-tight text-gray-900">
        <%= @project.name %>
      </h1>
      <p class="ml-2 mt-1 text-sm text-gray-500 truncate"><%= @project.display_discipline%></p>
    </div>
    <div class="mt-4 flex sm:mt-0 sm:ml-4">
      <%= link_to 'Edit', edit_project_path(@project), class:"inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
  <%= render 'projects/tabs'%>
</div>
<main class="pb-8">
  <div class="px-4 sm:px-6">
    <h1 class="sr-only">Page title</h1>
    <!-- Main 3 column grid -->
    <div class="grid grid-cols-1 gap-2 items-start lg:grid-cols-3 lg:gap-2">
      <!-- Left column -->
      <div class="grid grid-cols-1 gap-4 lg:col-span-2">
        <section aria-labelledby="participants_section">
          <h2 class="sr-only" id="section-1-title">Project Participants</h2>
          <div class="bg-white overflow-hidden">
            <div class="p-4">
              <div class="flex flex-wrap">
                <p class="mt-1 pb-2 text-sm font-medium  text-gray-900 truncate"><%="Project Participants(" + @project.participants.count.to_s + ")"%></p>
              </div>
              <ul class="divide-y divide-gray-200">
                <%= render partial: "projects/participants/participant", collection: @participants%>
              </ul>
            </div>
          </div>
        </section>
      </div>
      <!-- Right column -->
      <div class="xl:border-l xl:border-gray-200 grid grid-cols-1 gap-4">
        <section aria-labelledby="add-participant-section">
          <h2 class="sr-only" id="section-2-title">Add New Participant</h2>
          <div class="bg-white overflow-hidden">
            <div class="px-4">
              <%= render "projects/schedule/form", schedule: @schedule%>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</main>
<div class="pl-16 pt-4 pr-16">
</div>
</main>
