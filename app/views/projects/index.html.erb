<main class="flex-1 relative z-0 overflow-y-auto focus:outline-none">
  <!-- Page title & actions -->
  <div class="border-b border-gray-200 px-4 py-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8">
    <div class="-ml-2 -mt-2 flex flex-wrap items-baseline">
      <h1 class="text-3xl font-bold leading-tight text-gray-900">
        Projects
      </h1>
            <p class="ml-1 mt-1 text-sm text-gray-500 truncate"><%= "(" + @projects.count.to_s + " projects)"%></p>

    </div>
    <div class="mt-4 flex sm:mt-0 sm:ml-4">
      <%= link_to 'New Project', new_project_path, class:"btn-blue" %>
    </div>
  </div>
  <!-- Projects table (small breakpoint and up) -->
  <% if @projects.count > 0 %>
    <div class="hidden sm:block">
      <div class="align-middle inline-block min-w-full border-b border-gray-200">
        <table class="min-w-full">
          <thead>
            <tr class="border-gray-200">
              <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <span class="lg:pl-2">Project</span>
              </th>              
              <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Members
              </th>
              <th class="pr-6 py-3 border-b border-gray-200 bg-gray-50 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Created At
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-100">
            <%= render partial: "project", collection: @projects%>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</main>
