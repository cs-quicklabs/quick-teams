<%= form_with(model: @project) do |form| %>
<main class="max-w-lg mx-auto pt-10 pb-12 px-4 lg:pb-16">
    <%= render "devise/shared/error_messages", resource: @project %>
  <form>
    <div class="space-y-6 mt-2">
      <div>
        <h1 class="text-lg leading-6 font-large text-gray-900">
          Create new Project
        </h1>
        <p class="mt-1 text-sm text-gray-500">
          Letâ€™s get started by filling in the information below to create your new project.
        </p>
      </div>

      <div>
        <label for="project_name" class="block text-sm font-medium text-gray-700">
          Project Name
        </label>
        <div class="mt-1">
              <%= form.text_field :name, class: "block w-full shadow-sm focus:ring-light-blue-500 focus:border-light-blue-500 sm:text-sm border-gray-300 rounded-md"%>
        </div>
      </div>

      <div class="flex justify-end">
        <%= link_to "Back", projects_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-light-blue-500"%>
        <%= form.submit "Create Project",  class:"ml-3 order-0 inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 sm:order-1 sm:ml-3"%>                  
      </div>
    </div>
  </form>
</main>
<% end %>
