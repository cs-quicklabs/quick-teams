<% assignee = template_assignee.assignable.decorate %>
<li class="py-4 " id = "<%= dom_id(template_assignee) %>">
  <div class="ml-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center ">
        <div class="flex-shrink-0 w-10 h-10">
          <%= image_tag "male-placeholder-image.png", class: "w-10 h-10 rounded-full" %>
        </div>
        <div class="ml-4">
          <a href="<%= employee_reports_path(assignee) %>" class=" hover:text-gray-600 hover:underline">
            <div class="text-sm font-medium text-gray-900"><%= assignee.display_name %></div>
            <div class="text-sm font text-gray-900"> <%= assignee.display_position %></div>
          </a>
        </div>
      </div>
      <div class="flex justify-end">
        <%= delete_button(template_assignee_path(template_assignee.template_id, assignee.id)) %>
      </div>
    </div>
  </div>
</li>
