  <main class="pb-10 mx-auto max-w-7xl lg:py-12 lg:px-8">
  <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
    <%= render "shared/archive_menu" %>
    <main class="max-w-xl px-4 pb-12 lg:col-span-8">
      <div class="overflow-hidden bg-white">
        <div class="pb-4 ml-4">
          <%= render "shared/form_header", title: "Deactivated Users", subtitle: @employees.load.size > 0 ? "Following users have been deactivated." : "No record found." %>
        </div>
        <% if @employees.load.size > 0 %>
          <div class=" flex space-x-4 ml-4">
            <div class="flex-1 min-w-0 "  data-behavior="autocomplete" data-controller="nav-search" data-nav-search-url-value="/search/deactivated" >
              <label for="search" class="sr-only">Search</label>
              <div class="relative rounded-md shadow-sm"   >
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <!-- Heroicon name: solid/search -->
                  <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                  </svg>
                </div>
                <input type="search" name="search" id="search" class="pl-10 form-text-field " placeholder="Search" data-nav-search-target="input"  >
              </div>
              <div class="relative"   >
                <div  class="absolute left-0 z-10 block w-full mt-1 origin-top-right bg-white rounded-md shadow-lg   focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                  <ul data-nav-search-target="results" >
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="overflow-hidden bg-white" data-controller="infinite-scroll">
          <div>
            <table class="table border-separate mt-4">
              <thead class="bg-gray-50">
              </thead>
              <tbody class="table-body " id="employees" data-infinite-scroll-target="entries">
                <%= render partial: "employees/deactivated_user", collection: @employees, as: :deactivated_user, cached: true %>
              </tbody>
            </table>
            <div class="flex justify-end invisible mt-2 mb-6 mr-2" data-infinite-scroll-target="pagination">
              <%== render partial: "shared/paginator", locals: { pagy: @pagy } %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</main>
