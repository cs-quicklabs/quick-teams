  <%= form_with(model: account, id: dom_id(account)) do |form| %>
  <div class="space-y-6">
    <% if local_assigns[:message] %>
      <%= render "devise/shared/success_message", message: local_assigns[:message] %>
    <% end %>
    <%= render "devise/shared/error_messages", resource: account %>
    <div>
      <h1 class="text-lg leading-6 font-medium text-gray-900">
        Account Settings
      </h1>
      <p class="mt-1 text-sm text-gray-500">
        Please fill in your company information. This will be available for all your workforce.
      </p>
    </div>
    <div>
      <label for="project_name" class="block text-sm font-medium text-gray-700">
        Company Name
      </label>
      <div class="mt-1">
        <%= form.text_field :name,  class: "block w-full shadow-sm focus:ring-light-blue-500 focus:border-light-blue-500 sm:text-sm border-gray-300 rounded-md"%>
      </div>
    </div>
    <div class="flex justify-end">
      <%= form.submit "Save", class:"ml-3 inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-light-blue-500"%>
    </div>
  </div>
<% end %>
