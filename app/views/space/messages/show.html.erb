<!-- This example requires Tailwind CSS v2.0+ -->
<main class="max-w-4xl px-4 pt-10 pb-12 mx-auto space-y-6 lg:pb-16">
  <div class="px-4 py-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8">
    <%= render partial: "shared/messages/title", locals: { message: @message } %>
    <div class="flex mt-4 sm:mt-0 sm:ml-4">
      <%= link_to "Back", "javascript:history.back()", class: "btn-normal" %>
      <% if policy([@space, @message]).edit? %>
        <%= link_to "Edit", edit_employee_message_path(@message.messageable, @message), class: "btn-blue ml-3" %>
      <% end %>
    </div>
  </div>
  <% cache @message do %>
    <div class="text-sm text-gray-700 sm:px-6 lg:px-8">
      <p><%= @message.body %></p>
    </div>
  <% end %>
  <!-- Comments-->
  <section aria-labelledby="notes-title">
    <div class="pb-24 bg-white sm:rounded-lg overflow">
      <div class="divide-y divide-gray-200">
        <div class="px-4 py-5 sm:px-6">
          <h2 id="notes-title" class="text-lg font-medium text-gray-900">Comments</h2>
        </div>
        <div class="px-4 py-6 sm:px-6">
          <ul class="space-y-4" id="comments">
            <%= render partial: "shared/comments/body", collection: @message.comments.includes(:user).order(created_at: :asc), as: :comment, cached: true %>
          </ul>
        </div>
      </div>
      <% if policy([@space, @message]).comment? %>
        <%= render partial: "shared/comments/new", locals: { space_message: @message, comment: @comment } %>
      <% end %>
    </div>
  </section>
</main>
