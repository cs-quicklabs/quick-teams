<tr id="<%= dom_id todo %>">
  <% todo = todo.decorate %>
  <% owner = todo.owner %>
  <% project = todo.project %>
  <td class="table-cell whitespace-nowrap">
    <%= check_box_tag "completed", nil, todo.completed, data: { reflex: "click->TodoReflex#toggle_project_todo", id: todo.id }, class: "w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
  </td>
  <td class="table-cell ">
    <a href="<%= employee_todos_url(owner, script_name: "/#{owner.account.id}") %>" class="block hover:underline" target="_top">
      <div>
        <p class="font-medium text-gray-900 whitespace-nowrap">
          <span class=""><%= owner.decorate.display_name %></span>
        </p>
      </div>
    </a>
  </td>
  <td class="w-full table-cell">
    <a href="<%= project_todo_url(project, todo, script_name: "/#{owner.account.id}") %>" class="block hover:underline" target="_top">
      <%= highlight_hashtag(auto_link_urls_in_text(todo.title)) %>
    </a>
  </td>
  <td class="table-cell whitespace-nowrap">
    <%= display_created_at(todo) %>
  </td>
  <td class="table-cell whitespace-nowrap">
    <% if policy([project, todo]).edit? %>
      <%= edit_button(edit_project_todo_url(project, todo, script_name: "/#{owner.account.id}")) %>
    <% end %>
    <% if policy([project, todo]).destroy? %>
      <%= delete_button(project_todo_url(project, todo, script_name: "/#{owner.account.id}")) %>
    <% end %>
  </td>
</tr>
