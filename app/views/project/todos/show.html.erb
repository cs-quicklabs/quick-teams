<% @todo = @todo.decorate %>
<main class="max-w-4xl px-4 pt-10 pb-12 mx-auto space-y-6 lg:pb-16">
  <div class="px-4 py-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8">
    <div class="flex-1 min-w-0">
      <h3 class="text-2xl font-bold leading-tight text-gray-900">
        <%= @todo.display_title %>
      </h3>
      <div class="flex mt-4 space-x-3">
        <div class="flex-shrink-0">
          <%= image_tag "male-placeholder-image.png", class: "w-10 h-10 rounded-full" %>
        </div>
        <div>
          <div class="text-sm">
            <a href="<%= project_todos_path(@todo.owner, @todo) %>" class="font-medium text-gray-900 hover:underline"><%= @todo.owner.decorate.display_name %></a>
          </div>
        </div>
      </div>
    </div>
    <div class="flex mt-4 sm:mt-0 sm:ml-4">
      <%= link_to "Back", "javascript:history.back()", class: "btn-normal" %>
    </div>
    <% if policy([@project, @todo]).edit? %>
      <%= link_to "Edit", edit_project_todo_path(@todo.owner, @todo), class: "btn-blue ml-3" %>
    <% end %>
  </div>
  <% cache @todo do %>
    <div class="mt-1 text-sm text-gray-700 sm:px-6 lg:px-8">
      <p><%= @todo.body %></p>
    </div>
  <% end %>
</main>
