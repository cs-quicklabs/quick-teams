<main class="max-w-4xl px-4 pb-12 mx-auto space-y-6 lg:pb-16">
  <div class="px-4">
    <%= tailwind_form_with(model: @report, id: dom_id(@report), url: project_report_path(@project, @report), method: :patch) do |form| %>
      <main class="w-full px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16">
        <%= render "shared/form_messages", resource: @report, message: local_assigns[:message] %>
        <%= render "shared/form_header", title: "Edit Report for #{@project.decorate.display_name}", subtitle: "A report can be anything about the project, for example, milestones updates or anything you want to share with your team." %>
        <%= form.text_field :title, "Title", autocomplete: "off" %>
        <%= form.rich_text_area :body, "Description" %>
        <div class="flex justify-between">
          <div class="">
            <%= link_to "Cancel", project_reports_path(@project), class: "btn-normal" %>
          </div>
          <div class="">
            <%= form.submit "Update Draft", :name => "draft", class: "btn-normal" %>
            <%= form.submit "Submit Report", class: "btn-blue", data: {
                                               controller: "confirmation",
                                               "confirmation-message-value": "Are you sure you want to submit it? You won't be able to edit it after this.",
                                               action: "confirmation#confirm",
                                             } %>
          </div>
        </div>
      </main>
    <% end %>
  </div>
</main>
