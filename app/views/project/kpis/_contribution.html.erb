<div class="relative px-8">
  <div class="flex items-center justify-between">
    <div>
      <span class="text-xs font-medium inline-block py-1 uppercase">
        <%= contribution.category %>
      </span>
    </div>
    <div class="text-right">
      <span class="text-xs font-semibold inline-block">
        <%= contribution.display_score %>
      </span>
    </div>
  </div>
  <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-200">
    <% score = contribution.score * 10 %>
    <% if score >= 80 %>
      <div style="width:<%= score %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-green-400">
      </div>
    <% elsif score >= 50 and score < 80 %>
      <div style="width:<%= score %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-yellow-400">
      </div>
    <% else %>
      <div style="width:<%= score %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-red-400">
      </div>
    <% end %>
  </div>
</div>
