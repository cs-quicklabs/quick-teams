<tr  id="<%= dom_id risk %>">
  <td class=" w-full table-cell">
    <div class="space-x-2 inline-flex">
      <div class="flex">
        <% if risk.status? %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-<%= risk.decorate.risk_status_color %>-700" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        <% else %>
          <svg class=" flex-shrink-0 h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
      <div class="flex">
        <p class="whitespace-pre-wrap"><%= risk.body.upcase_first %></p>
      </div>
    </div>
  </td>
  <td class="table-cell whitespace-nowrap">
    <a href="#" class="font-medium text-gray-900"><%= risk.user.decorate.display_name %></a>
  </td>
  <td class="table-cell whitespace-nowrap">
    <span class="font-medium text-gray-500"><%= display_created_at(risk) %></span>
  </td>
  <td class="table-cell whitespace-nowrap">
    <div class="space-x-2 inline-flex">
      <% if policy([@project, risk]).edit? %>
        <% if risk.status? %>
          <%= link_to "Mitigate", project_risk_path(@project, risk), data: { "turbo-method": :patch }, class: "btn-inline-edit" %>
        <% else %>
          <%= link_to "Reopen", project_risk_path(@project, risk), data: { "turbo-method": :patch }, class: "btn-inline-edit" %>
        <% end %>
        <%= delete_button(project_risk_path(@project, risk)) %>
      <% end %>
    </div>
  </td>
</div>
</div>
</tr>
