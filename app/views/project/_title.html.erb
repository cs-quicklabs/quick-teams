<div class="px-4 py-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8" id="project-header">
  <div class="flex flex-wrap items-baseline -mt-2 -ml-2">
    <h1 class="text-3xl font-bold leading-tight text-gray-900">
      <%= project.name %>
      <p class="text-sm font-medium text-gray-600"><%= project.description %></p>
    </h1>
    <p class="mt-1 ml-2 text-sm text-gray-500 truncate"><%= project.display_discipline%></p>
    <div class="flex">
      <div id="project-tags" class="flex ml-4">
        <%= render partial: 'project/tags', locals: {project: project}%>
      </div>
      <button type="button" class="inline-flex items-center p-1 ml-2 text-white bg-indigo-600 border border-transparent rounded-full shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <!-- Heroicon name: solid/plus -->
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>
  <div class="flex sm:mt-0 sm:ml-4">
    <div id="project-status" class="flex">
      <%= render partial: 'project/status', locals: {project: project}%>
    </div>
    <!-- This example requires Tailwind CSS v2.0+ -->
    <div class="relative inline-block mr-4 -mt-1 text-left" x-data="{open: false}" @keydown.window.escape="open = false" >
      <div>
        <button @click="open = !open" type="button" class="inline-flex justify-center w-full px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500" id="menu-button" aria-expanded="true" aria-haspopup="true">
          Status
          <!-- Heroicon name: solid/chevron-down -->
          <svg class="w-5 h-5 ml-2 -mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
      <div  x-show="open"
        @click.away="open = false" class="absolute right-0 w-56 mt-2 origin-top-right bg-white rounded-md shadow-lg hide ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
        <div class="py-1" role="none">
          <% @statuses.each do |status|%>
            <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
            <a @click="open = false" href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" role="menuitem" data-reflex="click->ProjectStatus#change" data-project-id=<%= project.id%> data-status-id=<%= status.id%> ><%= status.name %></a>
          <% end %>
        </div>
      </div>
    </div>
    <div>
      <%= link_to 'Edit', edit_project_path(project), class:"btn-normal" %>
    </div>
    <% if !project.archived %>
      <div>
        <%= link_to 'Archive', archive_project_path(project), class:" ml-4 btn-normal" %>
      </div>
    <% else %>
      <div>
        <%= link_to 'Restore', unarchive_project_path(project), class:" ml-4 btn-normal" %>
      </div>
    <% end %>
  </div>
</div>
<%= render 'project/tabs'%>
</div>
