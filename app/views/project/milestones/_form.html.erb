<%= tailwind_form_with(model: milestone, id: dom_id(milestone), url: project_milestones_path(@project)) do |form| %>
  <main class="max-w-lg px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16">
    <%= render "shared/form_messages", resource: milestone, message: local_assigns[:message] %>
    <%= render "shared/form_header", title: "Add New Milestone", subtitle: "Add details of milestone for project" %>
    <%= form.text_field :title, "Title", autocomplete: "off" %>
    <div>
      <label for="date" class="block text-sm font-medium text-gray-700">
        Deadline
      </label>
      <%= form.date_field :deadline, class: "form-text-field mt-1" %>
    </div>
    <%= form.rich_text_area :body, "Description" %>
    <% if !@project.manager_id.nil? %>
      <div class="flex  inline-flex ">
        <%= form.check_box :permission,  class: "mr-2 mt-1  w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
        <span class="text-sm font-medium text-gray-700 mt-1" id="privacy-option-1-label">
          Allow <%=@project.manager.decorate.display_name%> to comment on the milestone
        </span>
      </div>
    <%end%>
    <div class="flex justify-end">
      <%= form.submit "Add Milestone", class: "btn-blue" %>
    </div>
  </main>
<% end %>
