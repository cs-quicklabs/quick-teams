<tr id=<%= dom_id(milestone) %>>
  <td class="table-cell ">
    <div class="text-sm">
      <p><%= highlight_hashtag(milestone.title) %></p>
    </div>
  </td>
  <td class="text-sm text-center">
    <div class="mt-1 text-sm text-gray-700">
     <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium <%= goal_status_color(milestone) %>">
        <%= milestone.status.to_s %>
      </span>
    </div>
  </td>
  <td class="table-cell whitespace-nowrap">
    <a href="#" class="font-medium text-gray-900"><%= milestone.user.decorate.display_name %></a>
  </td>
  <td class="table-cell whitespace-nowrap">
    <%= display_created_at(milestone) %>
  </td>
  <td class="table-cell ">
    <div class="mt-2 space-x-2 text-sm"  id=<%= "buttons_" + dom_id(milestone) %>>
      <%= link_to "Show", project_milestone_path(@project, milestone), class: "btn-inline-edit pl-2" %>
      <% if policy([@project, milestone]).edit? %>
        <%= edit_button(edit_project_milestone_path(@project, milestone)) %>
      <% end %>
      <% if policy([@project, milestone]).destroy? %>
        <%= delete_button(project_milestone_path(@project, milestone)) %>
      <% end %>
    </div>
  </td>
</tr>
