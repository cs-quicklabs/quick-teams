<tr>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="flex items-center">
      <div class="flex-shrink-0 w-10 h-10">
        <%= image_tag "male-placeholder-image.png", class:"w-10 h-10 rounded-full"%>
      </div>
      <div class="ml-4">
        <a href="<%= person_path(employee) %>" class="truncate hover:text-gray-600 hover:underline">
          <div class="text-sm font-medium text-gray-900">
            <%= employee.display_name %>
          </div>
          <div class="text-sm text-gray-500">
            <%= employee.display_position%>
          </div>
        </a>
      </div>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm text-gray-900">
      <%= employee.display_participated_projects %>
    </div>
    <div class="text-sm text-gray-500"></div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="inline-flex px-2 text-xl font-semibold leading-5 text-gray-900">
      <%= employee.display_occupancy%>
    </span>
  </td>
</tr>
